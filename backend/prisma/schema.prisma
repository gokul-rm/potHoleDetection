generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  PUBLIC
  OFFICIAL
  CORPORATE
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(PUBLIC)
  areaId    String?
  area      Area?    @relation(fields: [areaId], references: [id])
  createdAt DateTime @default(now())
}

model Area {
  id        String    @id @default(cuid())
  name      String    @unique
  users     User[]
  potholes  Pothole[]
}

model Pothole {
  id        String    @id @default(cuid())
  latitude  Float
  longitude Float
  severity  Int
  areaId    String
  area      Area      @relation(fields: [areaId], references: [id])
  reports   Report[]
  createdAt DateTime  @default(now())
}

model Report {
  id        String    @id @default(cuid())
  potholeId String
  pothole   Pothole   @relation(fields: [potholeId], references: [id])
  reporter  String
  message   String?
  createdAt DateTime @default(now())
}
